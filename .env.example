# Memory System Configuration

# Server Configuration
MEMORY_HOST=localhost
MEMORY_PORT=5000
NODE_ENV=development

# API Configuration
API_KEY=your-api-key-here
API_VERSION=v1

# Database Configuration
DB_TYPE=sqlite
DB_PATH=/var/lib/memory/memory.db

# For PostgreSQL (alternative)
# DB_TYPE=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=blackroad_memory
# DB_USER=memory
# DB_PASSWORD=your-password-here

# Redis Configuration (for caching and pub/sub)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security
JWT_SECRET=your-jwt-secret-here
API_KEY_SALT=your-salt-here
ENCRYPTION_KEY=your-encryption-key-here

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/memory/memory.log

# Performance
MAX_CONNECTIONS=1000
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=10
CACHE_TTL=3600

# Memory Configuration
STATE_PANEL_SIZE=10000
MESSAGE_QUEUE_SIZE=1000
LOCK_TTL=300
AGENT_TIMEOUT=3600

# Integration URLs
CODEX_URL=http://localhost:8000
SCHEDULER_URL=http://localhost:8001
SOCKET_URL=http://localhost:8002

# Audit
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=90

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health

# Rate Limiting
RATE_LIMIT_READ=1000
RATE_LIMIT_WRITE=100
RATE_LIMIT_LOCK=50
RATE_LIMIT_WINDOW=60

# Features
ENABLE_WEBHOOKS=true
ENABLE_GRAPHQL=false
ENABLE_WEBSOCKETS=true

# Clustering (for multi-node deployment)
CLUSTER_ENABLED=false
CLUSTER_NODES=node1:5000,node2:5000,node3:5000
CLUSTER_REPLICATION=2

# Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_PATH=/var/backups/memory

# Development
DEBUG=false
DEV_MODE=true
HOT_RELOAD=true
